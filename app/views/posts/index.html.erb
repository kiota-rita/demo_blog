<% content_for :page_title, "Welcome!" %>


<section class="section">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-coment">
					<div class="media">
						<div class"media-content">
							<p class="title is-4"> <%= link_to post.title, post %> </p>
						</div>
					</div>
					<div class="content">
					<%=post.content%>
					</div>
					<div class="comment-count">
						<span class="tah is-rounded"><% %></span>
					</div>
        </div>
      </div>
    <%end%>
  </div>
</section>